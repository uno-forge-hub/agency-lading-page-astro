---
import { Image } from "astro:assets";
---

<section
  id="about"
  class="relative bg-bg-surface/50 b-t b-border py20 px5 sm-px10 md-px12 lg-px5 lg-max-w-7xl mxa w-full flex flex-col md-flex-row gap16 rd-3xl xl-px16"
>
  <div
    aria-hidden="true"
    class="absolute pointer-event-none top-0 left-0 size-40 bg-gradient-to-br from-primary rd-full blur-3xl op30 dark-op50"
  >
  </div>
  <div
    aria-hidden="true"
    class="absolute pointer-event-none bottom-0 right-0 size-40 bg-gradient-to-br from-primary rd-full blur-3xl op30 dark-op50"
  >
  </div>
  <div class="flex-1 lg-pr10 relative flex justify-center">
    <div class="w-[calc(100%-2rem)] md-hfull flex justify-center">
      <Image
        src="/grow-perf.webp"
        alt="Growing business"
        width="1920"
        height="1200"
        class="wfull min-h92 md-min-hauto md-hfull object-cover relative rd-xl"
      />
    </div>
    <div
      class="bg-bg overflow-hidden shadow-lg shadow-bg-subtle/60 b b-border flex items-start gap3 p4 rd-xl absolute -left-4 sm-left-8 lg-left-12 top-10 flex"
    >
      <span>
        <span class="i-ph-eye flex text-fg"></span>
      </span>
      <div class="flex flex-col">
        <h3 class="font-medium text-fg-title">Profile Visits</h3>
        <p class="text-fg-muted text-sm">+20k</p>
      </div>
    </div>
    <div
      class="select-none pointer-event-none w54 flex flex-col gap-2 bg-bg overflow-hidden shadow-lg shadow-bg-subtle/60 b b-border rd-xl absolute right-0 bottom-4"
    >
      <div class="flex justify-between items-center pt5 px5">
        <h3 class="font-medium text-fg-title">Conversions</h3>
        <p class="text-fg-muted text-sm">500</p>
      </div>
      <span class="px5 pb10 text-success6 flex items-center gap-x2">
        <span class="flex i-ph-trend-up"></span>
        <span class="text-xl font-semibold">100%</span>
      </span>
      <svg
        width="606"
        height="393"
        class="wa h20 flex absolute -bottom-4 right-0"
        viewBox="0 0 606 393"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
